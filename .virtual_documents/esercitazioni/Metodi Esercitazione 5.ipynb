import numpy as np
import math as math
n= 40
p= np.zeros(n)
s= np.zeros(n)
b=np.zeros(n)

b[0]=2

s[0]=1

for i in range(1,n):

    p[i]=b[i-1]*s[i-1]
    b[i]=2*b[i-1]
    s[i]=np.sqrt((1.0-np.sqrt(1-s[i-1]**2))/2.0)

print(p)
plt.plot(np.arange(n),p)

errF = lambda x: abs((x-math.pi)/math.pi)
err = errF(p)
print(err)
plt.plot(np.arange(n),err)

































