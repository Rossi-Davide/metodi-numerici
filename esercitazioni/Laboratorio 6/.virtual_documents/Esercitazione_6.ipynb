











import math

def sign(x):
    return math.copysign(1,x)


def metodo_bisezione(fname,a,b,tolx):
    fa=fname(a)
    fb=fname(b)
    if sign(fa*fb)>=0:
        print("Impossibile applicre il metodo di bisezione")
        return None,None,None
    it=0
    v_xk=[]

    #andiamo avanti finchÃ© non localizziamo l'intervallino che contiene la nostra soluzione
    while abs(b-a)>tolx:
        xk=a+(b-a)/2
        v_xk.append(xk)
        it+=1
        fxk=fname(xk)
        if fxk==0:
            return xk,it,v_xk
        if sign(fa*fxk)<0:
            b=xk
            fb=fxk
        elif sign(fxk*fb)<0:
            a=xk
            fa=fxk
    return xk,it,v_xk
        


